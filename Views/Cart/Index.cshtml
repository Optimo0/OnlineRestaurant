@model List<CartModel>

@{
    ViewData["Title"] = "Cart Page";
}

<div class="container">
    <h2>Cart</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total Cost</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DishName</td>
                    <td>@item.Price</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Price * item.Quantity)</td>
                    <td>
                        <!-- For UpdateCartItemQuantity -->
                        <form method="post" asp-controller="Cart" asp-action="UpdateCartItemQuantity">
                            <input type="hidden" name="dishId" value="@item.DishId" />
                            <input type="number" name="quantity" min="1" value="@item.Quantity" />
                            <button type="submit" class="btn btn-primary">Update</button>
                        </form>
                        <!-- For RemoveFromCart -->
                        <form method="post" asp-controller="Cart" asp-action="RemoveFromCart">
                            <input type="hidden" name="dishId" value="@item.DishId" />
                            <button type="submit" class="btn btn-danger">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <h4>Total Price: $@ViewBag.TotalPrice</h4>
</div>